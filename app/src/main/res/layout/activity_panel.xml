<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPanel">

    <TextView
        android:id="@+id/tituloActivityPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CENTRO CÍVICO"
        android:textStyle="bold"
        android:textSize="10pt"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"

        app:layout_constraintBottom_toTopOf="@id/tituloPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tituloPanel"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="PANEL"
        android:textStyle="bold"
        android:textSize="8pt"

        app:layout_constraintBottom_toTopOf="@id/valorSensorProximidad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloActivityPanel" />

    <TextView
        android:id="@+id/valorSensorProximidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20pt"

        app:layout_constraintBottom_toTopOf="@+id/panelBarraNavegacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloPanel" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/panelBarraNavegacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>