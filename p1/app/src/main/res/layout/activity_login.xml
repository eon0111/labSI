<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityLogin">
    
    <TextView
        android:id="@+id/loginTituloUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Usuario:"
        android:textSize="8pt"
        
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/loginInputUsuario"
        app:layout_constraintBottom_toTopOf=TODO/>
    
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/loginInputUsuario"
        android:layout_width="30dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/loginTituloUsuario"
        app:layout_constraintStart_toEndOf="@id/loginTituloUsuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loginTituloUsuario"/>

    <TextView
        android:id="@+id/loginTituloContrasenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="ContraseÃ±a:"
        android:textSize="8pt"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/loginInputContrasenha"
        app:layout_constraintBottom_toTopOf=TODO/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/loginInputContrasenha"
        android:layout_width="30dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/loginTituloUsuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf=TODO/>

</androidx.constraintlayout.widget.ConstraintLayout>